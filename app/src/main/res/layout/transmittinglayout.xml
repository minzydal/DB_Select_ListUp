<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="AUTO MODE"
                android:textColor="#03A9F4"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventName_process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="SELECTED LIST"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:weightSum="3.6">

                <ImageView
                    android:id="@+id/complete"
                    android:layout_width="0dp"
                    android:layout_weight="3.6"
                    android:visibility="gone"
                    android:layout_height="130dp" />

                <ImageView
                    android:id="@+id/tablet"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:src="@drawable/tablet_" />

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/arrow" />

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/arrow" />

                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/arrow" />

                <ImageView
                    android:id="@+id/machine"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/arrow4"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/arrow" />

                <ImageView
                    android:id="@+id/arrow5"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/arrow" />

                <ImageView
                    android:id="@+id/arrow6"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/arrow" />

                <ImageView
                    android:id="@+id/upgrade"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:padding="10dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/upgradeProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/custom_progresbar" />

            <TextView
                android:id="@+id/progressPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/progressNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Upgrading data is transmitting…Please wait	…"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="XXX is in the process of being upgraded.\n Please wait a few minute."
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/romId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:padding="20dp"
                android:text="ROM ID"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/currentlyInVehicle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Currently In Vehicle"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/currentName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="MODEL NUMBER"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/latestUpdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Latest Update"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/latestVersion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="QLDJNC4EMG1E"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/updateConfirmButton"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="#CBCBCB"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
