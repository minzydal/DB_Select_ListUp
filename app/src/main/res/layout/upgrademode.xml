<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upgradeModeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/upgradeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Select Upgrade Mode"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/automode"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:background="@color/black"
                android:text="Auto Mode"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/manualmode"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/automode"
                android:background="@color/black"
                android:text="Manual Mode"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Upgrade Event Management"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Button
                android:id="@+id/relatedEventList"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/button_line"
                android:text="Related event list"
                android:textAllCaps="false"
                android:textColor="#A40303"
                android:textSize="15dp" />

            <Button
                android:id="@+id/allEventList"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@+id/relatedEventList"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="All Event List"
                android:textAllCaps="false"
                android:textSize="15dp" />

            <Button
                android:id="@+id/UpgradeHistory"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@id/allEventList"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Upgrade History"
                android:textAllCaps="false"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventListFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
