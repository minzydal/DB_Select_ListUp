<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/allEventListItem"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
 >

            <RelativeLayout
                android:id="@+id/radioLayout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:background="@drawable/event_border_line"
                android:layout_gravity="center"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/vcitxt"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/radioLayout"
                android:background="@drawable/event_border_line"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/eventtxt"
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/vcitxt"
                android:background="@drawable/event_border_line"
                android:gravity="center"
                android:padding="5dp"
                android:text="Event"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/typetxt"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/eventtxt"
                android:background="@drawable/event_border_line"
                android:gravity="center"
                android:padding="5dp"
                android:text="Type"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/statustxt"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/typetxt"
                android:background="@drawable/event_border_line"
                android:gravity="center"
                android:padding="5dp"
                android:text="Status"
                android:textColor="#00BCD4"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/tsbtxt"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/statustxt"
                android:background="@drawable/event_border_line"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/black" />

</LinearLayout>